<h3>What has everyone else been up to?</h3>
<ul>
	<% @tweets.each do |tweet| %>
		<li><%= tweet.user.email %> || <%= tweet.tweet %>
			<% if current_user.following?(tweet.user) %>
				<button type="button" class="btn btn-danger">
					Already Following
				</button>
			<% else %>
				<%= simple_form_for @relationship do |f| %>
					<%= f.input :followed_id, as: :hidden, input_html: { value: tweet.user.id } %>
					<%= f.button :submit, "Follow", class: 'btn btn-primary' %>
				<% end %>
			<% end %>
		</li>
		<br>
	<% end %>
</ul>